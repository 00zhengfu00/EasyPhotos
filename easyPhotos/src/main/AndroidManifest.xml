<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huantansheng.easyphotos">

    <uses-permission android:name="android.permission.CAMERA" />//相机权限
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />//读取外部存储
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />//写入外部存储
    <application
        android:allowBackup="true"
        android:supportsRtl="true">
        <activity
            android:name=".ui.EasyPhotosActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.PreviewEasyPhotosActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/EasyPhotosFullscreenTheme"/>
    </application>

</manifest>