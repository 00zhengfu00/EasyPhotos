<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EasyPhotosFullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/transparent_easy_photos</item>
    </style>

    <style name="EasyPhotosPuzzleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/easy_photos_bg_primary</item>
    </style>
</resources>